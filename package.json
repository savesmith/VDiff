{
  "name": "athenacomparemethodversions",
  "displayName": "CompareMethodVersions",
  "description": "Compares methods versioned by adding the date to the end of the signature to allow for more readable comparisons",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:athenacomparemethodversions.compareVersions"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "athenacomparemethodversions.compareVersions",
        "title": "Compare Method Versions"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "athenacomparemethodversions.compareVersions",
          "title": "Compare Method Versions",
          "group": "3_compare"
        }
      ]
    },
    "configuration": {
      "title": "Compare Method Version Settings",
      "properties": {
        "compareMethodVersionSettings.methodSignature": {
          "type":"string",
          "default":"sub ([A-Za-z_]*)(\\d*)\\s",
          "description": "Pattern used to find methods"
        },
        "compareMethodVersionSettings.methodVersion": {
          "type":"string",
          "default":"(.*sub [A-Za-z_]*)(\\d*)(\\s.*)",
          "description": "Pattern used to extract the version from a method's signature"
        },
        "compareMethodVersionSettings.methodDescription": {
          "type":"string",
          "default":"(^(?:#.*\\n)+)",
          "description": "Pattern used to retrieve comments describing a method"
        } 
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^8.6.0",
    "eslint-plugin-react": "^7.28.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  }
}
