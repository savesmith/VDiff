{
  "name": "comparemethodversions",
  "repository": "https://github.com/savesmith/CompareMethodVersions",
  "displayName": "CompareMethodVersions",
  "description": "Compares methods versioned by adding the date to the end of the signature to allow for more readable comparisons",
  "version": "0.0.6",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:comparemethodversions.compareActiveFileVersions",
    "onCommand:comparemethodversions.compareSelectedFileVersions"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "comparemethodversions.compareActiveFileVersions",
        "title": "Compare Method Versions"
      },
      {
        "command": "comparemethodversions.compareSelectedFileVersions",
        "title": "Compare Method Versions"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "comparemethodversions.compareActiveFileVersions",
          "title": "Compare Method Versions",
          "group": "3_compare"
        }
      ],
      "explorer/context": [
        {
          "command": "comparemethodversions.compareSelectedFileVersions",
          "title": "Compare Method Versions",
          "group": "compareMethodVersions"
        }
      ]
    },
    "configuration": {
      "title": "Compare Method Version Settings",
      "properties": {
        "compareMethodVersionSettings.methodPatterns": {
          "type":"array",
          "markdownDescription": "Patterns used to find and manipulate methods",
          "default": [
            {
              "filetype": ".pm",
              "signature": "sub ([A-Za-z_]*)(\\d*)\\s",
              "version": "(\\d{4})(\\d{2})(\\d{2})", 
              "versionExtraction": "  # $2/$3/$1",
              "description": "(^(?:#.*\\n)+)"
            },
            {
              "filetype": ".t",
              "signature": "subtest ([A-Za-z_]*)(\\d{4})(\\d{2})(\\d{2})\\s",
              "version": "(\\d{4})(\\d{2})(\\d{2})",
              "versionExtraction": "  # $2/$3/$1",
              "description": "(^(?:#.*\\n)+)"
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vpackage": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^8.6.0",
    "eslint-plugin-react": "^7.28.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  }
}
