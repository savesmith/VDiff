{
  "name": "vdiff",
  "repository": {
    "url": "https://github.com/savesmith/VDiff",
    "type": "git"
  },
  "keywords": [
    "version",
    "versioning",
    "diff",
    "compare",
    "vdiff",
    "legacy"
  ],
  "displayName": "vDiff",
  "description": "Generates a diff for a file's versioned methods. (e.g. hello2020_01_01 -> hello2022_02_01)",
  "icon": "Vdiff-Icon.png",
  "publisher": "savysolutions",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vdiff.compareActiveFileVersions",
    "onCommand:vdiff.compareSelectedFileVersions"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vdiff.compareActiveFileVersions",
        "title": "Version Diff"
      },
      {
        "command": "vdiff.compareSelectedFileVersions",
        "title": "Version Diff"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vdiff.compareActiveFileVersions",
          "title": "Version Diff",
          "group": "3_compare"
        }
      ],
      "explorer/context": [
        {
          "command": "vdiff.compareSelectedFileVersions",
          "title": "Version Diff",
          "group": "vdiff"
        }
      ]
    },
    "configuration": {
      "title": "vDiff",
      "properties": {
        "vdiff.methodPatterns": {
          "type": "array",
          "markdownDescription": "Patterns used to find and manipulate methods",
          "default": [
            {
              "filetype": "greetings.pm",
              "signature": "sub ([A-Za-z_]*)(\\d*)\\s",
              "version": "(\\d{4})(\\d{2})(\\d{2})",
              "versionExtraction": "$2/$3/$1",
              "description": "(^(?:#.*\\n)+)",
              "compareWith": [
                "__greetings__.pm"
              ],
              "versionType": "number"
            },
            {
              "filetype": ".pm",
              "signature": "sub ([A-Za-z_]*)(\\d{4})(\\d{2})(\\d{2})\\s",
              "version": "(\\d{4})(\\d{2})(\\d{2})",
              "versionExtraction": "$2/$3/$1",
              "description": "(^(?:#.*\\n)+)",
              "versionType": "number"
            },
            {
              "filetype": ".pm",
              "signature": "public void ([A-Za-z_]*)((\\d{2})_(\\d{2}))\\s",
              "version": "(\\d{2})_(\\d{2})",
              "versionExtraction": "$1/20$2",
              "description": "(^(?:#.*\\n)+)",
              "versionType": "date",
              "versionDateFormat": "mm_yy"
            },
            {
              "filetype": ".t",
              "signature": "subtest ([A-Za-z_]*)(\\d{4})(\\d{2})(\\d{2})\\s",
              "version": "(\\d{4})(\\d{2})(\\d{2})",
              "versionExtraction": "$2/$3/$1",
              "description": "(^(?:#.*\\n)+)"
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vpackage": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "@vscode/test-electron": "^2.0.3",
    "comment-patterns": "^0.12.2",
    "eslint": "^8.6.0",
    "eslint-plugin-react": "^7.28.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "moment": "^2.29.1"
  }
}
